extends layout

block content
  main.container

    section.section
      .row#form-row
        form.col.s12.m12.l12.xl12#form
          .row#input-container-row
            .input-field.col.s8.m10.l10.xl10
              input#text(type="text")

            .input-field.col.s2.m2.l2.xl2
              button.btn.waves-effect.waves-light#submit(type="button" name="action") Submit
                i.material-icons.right send
  
    section.row
      each podcast in podcasts
        .col.s12.m6.l4.xl4
          .card
            .card-image.waves-effect.waves-block.waves-light
              img.activator(src=podcast.imageURL, alt=`${podcast.name}`)
            .card-content
              span.card-title.activator.grey-text.text-darken-4.center-align #{podcast.titleShort}
                i.material-icons.right more_vert
            .card-reveal
              span.card-title.grey-text.text-darken-4.center-align.flow-text #{podcast.episodeTitle}
                i.material-icons.right close
              p.left-align 
                | #{podcast.episodeDescription}
              p.left-align 
                | Click 
                a(href= podcast.scavLink) here 
                | to find this podcast and many more.
      else 
        h1 Your search returned no podcasts. 
        h2 Try again with different search terms